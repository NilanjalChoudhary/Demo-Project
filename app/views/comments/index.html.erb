<%#= @comments %>
<% if @comments.size == 0 %>
  <%= "Post has no comments, be the first to add a comment!:- "%><%= link_to "ADD COMMENT", new_user_post_comment_path %><br>
<% else %>
<% @comments.each do |c| %>
  <%#= c %>
 <strong>user:- </strong><%= c.commenter %><br>
 <strong>comment:- </strong><%= c.comment %> 
 
 <% if current_user.name == c.commenter %>
  <%= link_to "DELETE", user_post_comment_path(current_user, c.post.id ,c.id), data: {
    turbo_method: :delete, 
    turbo_confirm: "Please Confirm That you want to delete that comment"
  } %>
 <% end %>
<hr />
<% end %>
<% end %>