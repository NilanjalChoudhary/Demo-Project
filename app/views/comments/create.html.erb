<% if current_user.role == "Preciousian" and @post.post_for == "NonPreiousian" %>

  <h1> You are not authorized to do this action</h1>
<% else %>

  <%= form_with model: [current_user, @post, @comment] do |f| %>

    <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
<% end %>