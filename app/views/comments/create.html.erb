<% if current_user.role == "Preciousian" and @post.post_for == "NonPreiousian" %>

  <h1> You are not authorized to do this action</h1>
<% else %>

  <%= form_with model: [current_user, @post, @comment] do |f| %>
    <div>
      <%= f.label :comment %>
      <%= f.text_area :comment %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  <% end %>
<% end %>