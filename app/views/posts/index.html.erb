<% @posts.each do |p| %>
<div>
  <strong>USER:- </strong>
  <%= p.user.name %><br>
  <%= p.title %><br>
  <%
=begin%>
 <% if p.avatar.attached? %>
    <image src = " <%= (url_for(p.avatar)) %> ">
  <% end %> 
<%
=end%>
  <%#= image_tag(p.image) %>


  <%
=begin%>
 <%= image_tag(p.image, size: "300x260") %>
  <%= p.body %> 
<%
=end%>

  <% p.pictures.each do |pics| %>
    <%= image_tag(pics, size: "150x180") %>
  <% end %>
  <%= p.body %><br>
  <% likes = p.get_likes.size %> 
  <% if likes > 1 %>
    <%= likes %><%= " likes" %> <br>
  <% elsif likes == 1 %>
    <%= likes %><%= " like" %><br>
  <% else %>
    <%= likes %><%= " likes" %><br>
  <% end %>

  <% if p.get_upvotes.voters.pluck(:id).include? current_user.id  %>
    <%= link_to "Unlike" %><br>
    <%= button_to "\u{2764}"%><br>
  <% else %>
    <%= link_to "Like this post", p.liked_by current_user %><br>
    <%= button_to "\u{2661}" %><br>
  <% end %>
  <%# p_id = current_user.posts.pluck("posts.id").find_by("posts.title = ?", p.title)  %>
  <%= link_to "VIEW COMMENTS", user_post_comments_path(current_user, p.id) %><br>
  <%= link_to "Add Comment", new_user_post_comment_path(current_user, p.id ) %>
  <hr />

</div>
<% end %>
