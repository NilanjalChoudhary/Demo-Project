<%= form_with model: [ current_user, current_user.posts.build] do |f| %>
  
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= f.label :pictures %><br>
    <%= f.file_field :pictures, multiple: true %>
  </div>
  

  <div>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.rich_text_area :body %>
  </div>

  <% if current_user.role == "Admin" %>
    <div>
      <%= f.label "Post For" %>
      <%= f.select :post_for, ["NonPreciousian", "Preciousian"] %>
    </div><br>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
<% end %>